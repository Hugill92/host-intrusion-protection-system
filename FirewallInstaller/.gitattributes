# Normalize line endings
* text=auto

# PowerShell + scripts
*.ps1  text eol=crlf
*.psm1 text eol=crlf
*.psd1 text eol=crlf
*.cmd  text eol=crlf
*.bat  text eol=crlf

# Markdown / docs
*.md   text eol=lf

# JSON/YAML
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf

# FirewallCore policy artifacts are canonical and must not be modified casually.
# Keep them binary, no diff noise, no EOL normalization.
Firewall/Policy/*.wfw -text -diff
Firewall/Policy/*.json text eol=lf
Firewall/Policy/*.txt  text eol=lf
