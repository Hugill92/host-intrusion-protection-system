{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "HIPS: Run Firewall Tests (DEV-Only\\Run-FirewallTests.ps1)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\Firewall\\DEV-Only\\Run-FirewallTests.ps1"
      ],
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "HIPS: Run Forced DEV Tests (DEV-Only\\Run-Forced-Dev-Tests.ps1)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\Firewall\\DEV-Only\\Run-Forced-Dev-Tests.ps1"
      ],
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "HIPS: Run Pentest (all *.ps1 in DEV-Only\\Pentest)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "$suite = Join-Path '${workspaceFolder}' 'Firewall\\DEV-Only\\Pentest'; if(!(Test-Path $suite)){ throw \"Missing suite folder: $suite\" }; $tests = Get-ChildItem $suite -Filter '*.ps1' | Sort-Object Name; if(!$tests){ throw \"No *.ps1 found in $suite\" }; foreach($t in $tests){ Write-Host \"`n>>> RUNNING $($t.Name)\"; & $t.FullName }"
      ],
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "HIPS: Run ALL (FirewallTests + ForcedDev + Pentest)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "HIPS: Run Firewall Tests (DEV-Only\\Run-FirewallTests.ps1)",
        "HIPS: Run Forced DEV Tests (DEV-Only\\Run-Forced-Dev-Tests.ps1)",
        "HIPS: Run Pentest (all *.ps1 in DEV-Only\\Pentest)"
      ],
      "problemMatcher": []
    },
    {
      "label": "FirewallCore: Run Notifiers Signoff (All)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "\\Tools\\Test-NotifiersSignoff.ps1",
        "-Severity",
        "All"
      ],
      "problemMatcher": []
    }
  ]
}
